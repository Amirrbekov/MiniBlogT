@model IEnumerable<News>
@{
    ViewData["Title"] = "News";
}

<div class="container">
    <h2 class="text-center">Our News</h2>
    <div class="row text-center">
        @foreach (var item in Model)
        {
            <div class="col-lg-4">
                <img src="/img/@item.ImageUrl" alt="" class="bd-placeholder-img rounded-circle" width="140" height="140" />
                <h2>@item.Name</h2>
                <p>@item.Content</p>
                <p><a class="btn btn-secondary" asp-controller="News" asp-action="Detail" asp-route-id="@item.Id">View details »</a></p>
            </div>
        }
    </div>
</div>