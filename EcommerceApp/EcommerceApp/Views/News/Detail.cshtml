@model Entities.News

@{
    ViewData["Title"] = @Model.Name + "Detail";
}

<h1>@Model.Name</h1>

<div class="container">
    <div class="row">
        <div class="col-md-4">
            <img src="/img/@Model.ImageUrl" alt="" class="bd-placeholder-img rounded-circle" width="340" height="340" />

        </div>
        <div class="col-md-8">
            <p>@Model.Content</p>
        </div>
    </div>
</div>
